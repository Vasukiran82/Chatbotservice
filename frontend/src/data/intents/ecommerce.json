{
  "domain": "ecommerce",
  "intents": [
    {
      "intent": "track_order",
      "patterns": [
        "track order {order_id}",
        "track my order {order_id}",
        "where is my order {order_id}",
        "order status {order_id}",
        "where is order {order_id}"
      ],
      "entities": ["order_id"],
      "validationAPI": "/api/ecommerce/validateOrder",
      "responses": ["Your order {order_id} is {status} and will arrive by {delivery_date}."]
    },
    {
      "intent": "cancel_order",
      "patterns": [
        "cancel order {order_id}",
        "i want to cancel my order {order_id}",
        "cancel my order {order_id}",
        "stop my order {order_id}"
      ],
      "entities": ["order_id"],
      "validationAPI": "/api/ecommerce/cancelOrder",
      "responses": ["Order {order_id} has been cancelled successfully."]
    },
    {
      "intent": "return_order",
      "patterns": [
        "return order {order_id}",
        "i want to return my order {order_id}",
        "initiate return for {order_id}",
        "how to return order {order_id}"
      ],
      "entities": ["order_id"],
      "validationAPI": "/api/ecommerce/returnOrder",
      "responses": ["Your return request for order {order_id} has been started."]
    },
    {
      "intent": "replace_order",
      "patterns": ["replace order {order_id}", "replacement for {order_id}", "exchange product {order_id}"],
      "entities": ["order_id"],
      "validationAPI": "/api/ecommerce/replaceOrder",
      "responses": ["Replacement for order {order_id} has been initiated."]
    },
    {
      "intent": "payment_status",
      "patterns": [
        "payment status for {order_id}",
        "has my payment for order {order_id} succeeded",
        "did payment complete for {order_id}"
      ],
      "entities": ["order_id"],
      "validationAPI": "/api/ecommerce/checkPayment",
      "responses": ["Payment for order {order_id} is {payment_status}."]
    },
    {
      "intent": "product_availability",
      "patterns": ["is {product_name} available", "do you have {product_name}", "check stock for {product_name}"],
      "entities": ["product_name"],
      "validationAPI": "/api/ecommerce/checkStock",
      "responses": ["The product {product_name} is {availability_status}."]
    },
    {
      "intent": "product_details",
      "patterns": [
        "tell me about {product_name}",
        "details of {product_name}",
        "features of {product_name}"
      ],
      "entities": ["product_name"],
      "validationAPI": "/api/ecommerce/productDetails",
      "responses": ["Details for {product_name}: {product_description}."]
    },
    {
      "intent": "order_history",
      "patterns": ["show my orders", "order history", "past orders"],
      "validationAPI": "/api/ecommerce/orderHistory",
      "responses": ["Your order history: {orders_list}."]
    },
    {
      "intent": "shipping_info",
      "patterns": ["shipping details for {order_id}", "delivery address for {order_id}"],
      "entities": ["order_id"],
      "validationAPI": "/api/ecommerce/shippingInfo",
      "responses": ["Order {order_id} will be delivered to {delivery_address}. Status: {status}."]
    },
    {
      "intent": "refund_status",
      "patterns": ["refund status for {order_id}", "refund for {order_id}", "check refund {order_id}"],
      "entities": ["order_id"],
      "validationAPI": "/api/ecommerce/checkRefund",
      "responses": ["Refund for order {order_id} is {refund_status}."]
    },
    {
      "intent": "contact_support",
      "patterns": ["contact support", "talk to customer care", "customer care number"],
      "responses": ["You can contact support at support@shopdemo.com or +91-9876543210."]
    },
    {
      "intent": "payment_methods",
      "patterns": ["what are the payment options", "available payment methods", "how can i pay"],
      "responses": ["You can pay via UPI, Cards, Net Banking or Cash on Delivery."]
    }
  ]
}
