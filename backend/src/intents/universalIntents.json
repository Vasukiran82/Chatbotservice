[
  {
    "domain": "common",
    "intents": [
      {
        "intent": "greeting",
        "patterns": ["hi", "hello", "hey", "good morning", "good evening"],
        "responses": ["Hello! How can I assist you today?", "Hi there ðŸ‘‹ What would you like help with?"]
      },
      {
        "intent": "goodbye",
        "patterns": ["bye", "goodbye", "see you", "catch you later"],
        "responses": ["Goodbye! Have a great day!", "See you soon ðŸ‘‹"]
      },
      {
        "intent": "thanks",
        "patterns": ["thanks", "thank you", "appreciate it"],
        "responses": ["You're welcome!", "Happy to help ðŸ˜Š"]
      },
      {
        "intent": "help",
        "patterns": ["help", "i need help", "what can you do", "how to use chatbot"],
        "responses": ["I can help with orders, products, invoices, HR info, and more!"]
      },
      {
        "intent": "contact_support",
        "patterns": ["contact support", "talk to customer care", "call support"],
        "responses": ["You can contact support at support@example.com or call +91-9876543210."]
      }
    ]
  },

  {
    "domain": "ecommerce",
    "intents": [
      {
        "intent": "track_order",
        "patterns": [
          "track order {order_id}",
          "track my order {order_id}",
          "where is my order {order_id}",
          "order status {order_id}",
          "where is order {order_id}"
        ],
        "entities": ["order_id"],
        "validationAPI": "/api/ecommerce/validateOrder",
        "responses": ["Your order {order_id} is currently {status} and will arrive by {delivery_date}."]
      },
      {
        "intent": "cancel_order",
        "patterns": ["cancel order {order_id}", "i want to cancel order {order_id}", "cancel my order {order_id}"],
        "entities": ["order_id"],
        "validationAPI": "/api/ecommerce/cancelOrder",
        "responses": ["Your order {order_id} has been {status} successfully."]
      },
      {
        "intent": "return_order",
        "patterns": ["return order {order_id}", "i want to return {order_id}", "how to return my order {order_id}"],
        "entities": ["order_id"],
        "validationAPI": "/api/ecommerce/returnOrder",
        "responses": ["Return for order {order_id} has been initiated. Refund will be processed within 3-5 days."]
      },
      {
        "intent": "show_offers",
        "patterns": ["show offers", "show me offers", "current deals", "any discounts"],
        "responses": ["Today's top deals: 20% off selected items. Visit the offers page for details."]
      },
      {
        "intent": "product_availability",
        "patterns": ["is {product_name} available", "do you have {product_name}", "check stock for {product_name}"],
        "entities": ["product_name"],
        "validationAPI": "/api/ecommerce/checkStock",
        "responses": ["The product {product_name} is currently {availability}."]
      },
      {
        "intent": "payment_issue",
        "patterns": ["payment failed", "transaction not completed", "money deducted but no order"],
        "responses": ["We're sorry about that. Please share your order ID, and our team will resolve it immediately."]
      },
      {
        "intent": "shipping_policy",
        "patterns": ["shipping policy", "how long for delivery", "delivery time"],
        "responses": ["Orders are usually delivered within 3â€“5 business days depending on location."]
      },
      {
        "intent": "refund_status",
        "patterns": ["refund status {order_id}", "where is my refund {order_id}", "refund not received"],
        "entities": ["order_id"],
        "validationAPI": "/api/ecommerce/refundStatus",
        "responses": ["Your refund for order {order_id} is currently {refund_status} and expected by {refund_date}."]
      }
    ]
  },

  {
    "domain": "erp",
    "intents": [
      {
        "intent": "leave_balance",
        "patterns": ["show my leave balance", "how many leaves left", "remaining leaves"],
        "validationAPI": "/api/erp/validateLeaveBalance",
        "responses": ["You have {remaining_leaves} remaining leaves as of today."]
      },
      {
        "intent": "apply_leave",
        "patterns": ["apply leave from {start_date} to {end_date}", "request leave for {days} days"],
        "entities": ["start_date", "end_date", "days"],
        "validationAPI": "/api/erp/applyLeave",
        "responses": ["Leave applied from {start_date} to {end_date}. Waiting for manager approval."]
      },
      {
        "intent": "attendance_status",
        "patterns": ["show my attendance", "attendance for this month", "check my attendance"],
        "validationAPI": "/api/erp/attendanceStatus",
        "responses": ["You were present for {days_present} days and absent for {days_absent} this month."]
      },
      {
        "intent": "salary_details",
        "patterns": ["show my payslip", "salary details", "salary for {month}"],
        "entities": ["month"],
        "validationAPI": "/api/erp/salaryDetails",
        "responses": ["Salary for {month} is {amount} and has been credited to your account."]
      },
      {
        "intent": "invoice_status",
        "patterns": ["check invoice {invoice_id}", "invoice status {invoice_id}", "invoice {invoice_id} details"],
        "entities": ["invoice_id"],
        "validationAPI": "/api/erp/invoiceStatus",
        "responses": ["Invoice {invoice_id} is currently {status} and due by {due_date}."]
      },
      {
        "intent": "project_status",
        "patterns": ["status of project {project_name}", "project {project_name} details", "progress of {project_name}"],
        "entities": ["project_name"],
        "validationAPI": "/api/erp/projectStatus",
        "responses": ["Project {project_name} is currently {progress}% complete and in {stage} stage."]
      }
    ]
  }
]
